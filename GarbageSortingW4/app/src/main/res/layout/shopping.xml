<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#767272"
    android:padding="5dp"
    android:orientation="vertical">

    <!-- What new item -->
    <!-- Where ito buy new item -->

    <!-- Button to add new item-->

    <!-- Button to list all items-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="118dp"
        android:layout_marginBottom="5dp"
        android:orientation="vertical" >

        <EditText
            android:id="@+id/what_text"
            android:hint="Enter a product name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#ffffff" />

        <TextView
            android:id="@+id/textResponse"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/white"
            />
    </LinearLayout>

    <Button
        android:id="@+id/list"
        android:layout_width="385dp"
        android:layout_height="@dimen/button_size"
        android:layout_gravity="center"
        android:layout_marginBottom="5dp"
        android:background="#39f208"
        android:text="@string/list"
        android:textSize="@dimen/text_size" />

    <Button
        android:id="@+id/add_button"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/button_size"
        android:layout_gravity="center"
        android:layout_marginBottom="5dp"
        android:background="#39f208"
        android:text="@string/heading_create"
        android:textSize="@dimen/text_size" />

</LinearLayout>